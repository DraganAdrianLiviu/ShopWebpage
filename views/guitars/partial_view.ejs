<div class="form-grup">
    <label for="title">Title</label>
    <input required value="<%= guitar.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-grup">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= guitar.description %></textarea>
</div>

<div class="form-grup">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= guitar.markdown %></textarea>
</div>

<div class="mt-2">
    <a href="/" class="btn btn-secondary ">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>